<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- 指定Web应用的默认编码集,相当于调用HttpServletRequest的setCharacterEncoding方法 -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <!-- 该属性指定需要Struts 2处理的请求后缀，该属性的默认值是action，即所有匹配*.action的请求都由Struts2处理。
    如果用户需要指定多个请求后缀，则多个后缀之间以英文逗号（,）隔开。 -->
    <constant name="struts.action.extension" value="do"/>
    <!-- 设置浏览器是否缓存静态内容,默认值为true(生产环境下使用),开发阶段最好关闭 -->
    <constant name="struts.serve.static.browserCache"  value="false"/>
    <!-- 当struts的配置文件修改后,系统是否自动重新加载该文件,默认值为false(生产环境下使用),开发阶段最好打开 -->
    <constant name="struts.configuration.xml.reload" value="true"/>
    <!-- 开发模式下使用,这样可以打印出更详细的错误信息 -->
    <constant name="struts.devMode" value="false" />
     <!-- 默认的视图主题 -->
    <constant name="struts.ui.theme" value="simple" />
    <constant name="struts.objectFactory" value="spring" />
    

	<!-- 加载其他action配置     一般团队中每个人负责一个某块开发，所以每个人都有自己开发的xxxxx.xml(先前制定好名字),整合使用-->
<!--	<include file="struts-admin.xml"/> -->
	<include file="struts-searchEngine.xml"/>
	<include file="struts-staff.xml"/>
	<include file="struts-staffHandleRecord.xml"/>
	<include file="struts-rejectedApply.xml"></include>
	<include file="struts-customer.xml"/>
	<include file="struts-catagory.xml"/>
	<include file="struts-book.xml"/>
	<include file="struts-paymentMethod.xml"></include>
	<include file="struts-order.xml"/>
	<include file="struts-promotion.xml"/>
	<include file="struts-shoppingRecord.xml"/>
	<include file="struts-admin.xml"/>
	<include file="struts-shoppingCart.xml"></include>
	<include file="struts-shippingAddress.xml"></include>

	<include file="struts-comment.xml"/>

	<include file="struts-collection.xml"/>
<include file="struts-admin.xml"/>
</struts>
