		<!--            goodsAction管理                                   -->
		<!-- showAllGoods_aa -->
		<action name="showAllGoods_aa" class="goodsAction" method="showAllGoods_aa" >
			<result name="brand">/for_BgoodsType.jsp</result>
			<result name="scattered">/for_SgoodsType.jsp</result>
			<result name="success">/for_goodsType.jsp</result>
			<result name="input">/fail.jsp</result>
		</action>
		
		
		
		<!--            gridAction管理                                   -->
